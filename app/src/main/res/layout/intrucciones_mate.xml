<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center">

        <!-- Título de la pantalla -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="INSTRUCCIONES"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:paddingBottom="24dp"
            android:fontFamily="@font/pressstart2p_regular"
            android:gravity="center" />

        <!-- Subtítulo de categoría -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MATEMATICAS"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:paddingBottom="24dp"
            android:fontFamily="@font/pressstart2p_regular"
            android:gravity="center" />

        <!-- Instrucciones de Matemáticas -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. Lee las lecciones para aprender los conceptos y fundamentos necesarios."
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:paddingBottom="10dp"
            android:fontFamily="@font/nunito_regular"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2. Realiza los ejercicios para reforzar los aprendizajes adquiridos."
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:paddingBottom="10dp"
            android:fontFamily="@font/nunito_regular"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3. Completa las actividades para evaluar tu aprendizaje."
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:paddingBottom="10dp"
            android:fontFamily="@font/nunito_regular"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4. Revisa tu puntuación tras completar las actividades."
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:paddingBottom="24dp"
            android:fontFamily="@font/nunito_regular"
            android:gravity="center" />

        <!-- Botones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="16dp">

            <!-- Botón Menú Principal -->
            <Button
                android:id="@+id/buttonMenuMath"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Menú Principal"
                android:backgroundTint="@color/primary_color"
                android:textSize="18sp"
                android:fontFamily="@font/nunito_regular"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:padding="14dp"
                android:layout_marginBottom="16dp"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/ic_menu"
                android:drawablePadding="16dp"
                android:elevation="4dp"
                 />

            <!-- Botón Ir al Juego -->
            <Button
                android:id="@+id/buttonContinueMath"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Ir al Juego"
                android:backgroundTint="@color/primary_color"
                android:textSize="18sp"
                android:fontFamily="@font/nunito_regular"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:padding="14dp"
                android:layout_marginBottom="16dp"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/ic_play"
                android:drawablePadding="16dp"
                android:elevation="4dp"
                />

            <!-- Botón Lecciones -->
            <Button
                android:id="@+id/buttonLecMate"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Lecciones"
                android:backgroundTint="@color/primary_color"
                android:textSize="18sp"
                android:fontFamily="@font/nunito_regular"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:padding="14dp"
                android:layout_marginTop="16dp"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/ic_book"
                android:drawablePadding="16dp"
                android:elevation="4dp"
                 />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
